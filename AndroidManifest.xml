<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunhui.jokebook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_dog"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" android:name=".app.Myapplicaton">
        <activity
            android:name="com.sunhui.jokebook.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sunhui.jokebook.FragmentActivity"
            android:label="@string/title_activity_fragment" >
        </activity>
        <activity
            android:name="com.sunhui.jokebook.activity.FragnentActivity"
            android:label="@string/title_activity_fragnent" >
        </activity>
        <activity
            android:name="com.sunhui.jokebook.activity.JokeActivity"
            android:label="@string/title_activity_joke" >
        </activity>
    </application>

</manifest>
